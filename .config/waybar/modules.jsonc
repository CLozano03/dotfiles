{
    // Workspaces
    "hyprland/workspaces" : {     
        "on-click": "activate",
        "active-only": true,
        "all-outputs": true,
        "format": "{}",
        "format-icons": {
            "urgent": "",
            "active": "",
            "default": ""
        },
        "persistent-workspaces": {
            "*": 5
        }       
    },

