{
    // Workspaces
    "hyprland/workspaces" : {     
        "on-click": "activate",
        "active-only": true,
        "all-outputs": false,
        "format": "{icon}",
        "format-icons": {
        "1": "󰈹",
        "2": "",
        "3": "󰨞",
        "4": "󰈔",
        "5": "",
        "6": ""
        },
        "persistent-workspaces": {
            "*": 6
        }       
    },

    "custom/archlogo": {
        "format": "",
        "on-click": "kinfocenter",
        "tooltip": true,
        "tooltip-format": "Show system information"
    },


    // Group Settings
    "group/settings": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 300,
            "children-class": "not-memory",
            "transition-left-to-right": true
        },            
        "modules": [
            "custom/settings",
            "custom/waybarthemes",
            "custom/wallpaper",
            "custom/ml4w-hyprland-settings"
        ]
    },

    // Settings
    "custom/settings": {
        "format": "",
        "tooltip-format": "Settings"
    },

    // Waybar Themes
    "custom/waybarthemes": {
        "format": "",
        "on-click": "$XDG_CONFIG_HOME/waybar/themeswitcher.sh",
        "tooltip-format": "Select a waybar theme"
    },

    // Wallpaper
    "custom/wallpaper": {
        "format": "",
        "on-click": "waypaper",
        "on-click-right": "~/dotfiles/hypr/scripts/wallpaper-effects.sh",
        "tooltip-format": "Left: Select a wallpaper\nRight: Select wallpaper effect"
    },

