    "custom/archlogo": {
        "format": "<span color=\"#1793d1\"></span> <span color=\"#777777\"></span>",
        "on-click": "alacritty"
    },


    // Group Settings
    "group/settings": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 300,
            "children-class": "not-memory",
            "transition-left-to-right": true
